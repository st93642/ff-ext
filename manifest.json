{
  "manifest_version": 3,
  "name": "Screenshot Capture",
  "version": "1.0",
  "description": "Capture screenshots from any webpage with a single click.",
  "browser_specific_settings": {
    "gecko": {
      "id": "screenshot-capture@example.com"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
