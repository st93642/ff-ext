{
  "manifest_version": 3,
  "name": "Screenshot Capture",
  "version": "1.0",
  "description": "Capture and crop screenshots with drag selection and automatic clipboard copy.",
  "browser_specific_settings": {
    "gecko": {
      "id": "screenshot-capture@example.com"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Crop Screenshot (Click or Ctrl+Shift+S)"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Start screenshot crop selection"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
